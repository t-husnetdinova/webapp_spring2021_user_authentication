<div class="form-data">
    <form action="<%= `/users/${user._id}/update?_method=PUT`%>" method="POST">        <label for="txtFirstName">First Name</label>
        <input type="text"name="firstName" id="txtFirstName" autofocus required value="<%= user.firstName %>">
        
        <label for="txtLastName">Last Name</label>
        <input type="text"name="lastName" id="txtLastName" autofocus required value="<%= user.lastName %>">

        <label for="txtEmail">Email</label>
        <input type="text"name="email" id="txtEmail" required value="<%= user.email %>">

        <label for="txtZipCode">Zip Code</label>
        <input type="text"name="zipCode" id="txtZipCode" required value="<%= user.zipCode %>">

        <label for="txtPassword">Password</label>
        <input type="text"name="password" id="txtPassword" required value="<%= user.password %>">

        <button type="submit">Save</button>
    </form>
</div>