<div class="form-data">
    <form action="/subscribers/create" method="POST">
        <label for="txtFirstName">First Name</label>
        <input type="text"name="firstName" id="txtFirstName" autofocus required>

        <label for="txtLastName">Last Name</label>
        <input type="text"name="lastName" id="txtLastName" autofocus required>  

        <label for="txtEmail">Email</label>
        <input type="text"name="email" id="txtEmail" required>

        <label for="txtZipCode">Zip Code</label>
        <input type="text"name="zipCode" id="txtZipCode" required>

        <label for="txtPassword">Password</label>
        <input type="text"name="password" id="txtPassword" required>

        <button type="submit">Create</button>
    </form>
</div>