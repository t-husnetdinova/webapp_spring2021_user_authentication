<div class="form-data">
    <form action="<%= `/subscribers/${subscriber._id}/update?_method=PUT`%>" method="POST">
        <label for="txtFirstName">Name</label>
        <input type="text"name="firstName" id="txtFirstName" autofocus required value="<%= subscriber.firstName %>"> 
        
        <label for="txtLastName">Name</label>
        <input type="text"name="lastName" id="txtLastName" autofocus required value="<%= subscriber.lastName %>"> 

        <label for="txtEmail">Email</label>
        <input type="text"name="email" id="txtEmail" required value="<%= subscriber.email %>">

        <label for="txtZipCode">Zip Code</label>
        <input type="text"name="zipCode" id="txtZipCode" required value="<%= subscriber.zipCode %>">

        <label for="txtPassword">Password</label>
        <input type="text"name="password" id="txtPassword" required value="<%= subscriber.password %>">

        <button type="submit">Save</button>
    </form>
</div>